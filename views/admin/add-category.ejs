<%- include('../../views/partials/admin/header') %>

<div class="wrapper">
  <%- include('../../views/partials/admin/sidebar') %>

  <div class="container">
    <h1 class="my-4">Add Category</h1>


    <!-- Category Form -->
    <form action="/admin/add-category" method="POST" class="form-horizontal">
        <div class="form-group">
            <label for="categoryName" class="form-label">Category Name</label>
            <input type="text" id="categoryName" name="name" class="form-control" required placeholder="Enter category name">
        </div>

        <div class="form-group">
            <label for="categoryDescription" class="form-label">Category Description</label>
            <textarea id="categoryDescription" name="description" class="form-control" required placeholder="Enter category description"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Add Category</button>
    </form>

    </div>
  </div>
</div>

<%- include('../../views/partials/admin/footer') %>
