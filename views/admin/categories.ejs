<%- include('../../views/partials/admin/header') %>

<div class="wrapper">
  <%- include('../../views/partials/admin/sidebar') %>

  <div class="container">
    <h1 class="my-4">Manage Categories</h1>

    <!-- Search Bar -->
    <div class="d-flex justify-content-between mb-4">
      <input
        type="text"
        id="searchBar"
        class="form-control w-50"
        placeholder="Search Category"
        onkeyup="filterTable()"
      />
    </div>

    <!-- Table Container -->
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Added On</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="userTable">
          <% for(let i = 0; i < category.length; i++) { %>
          <tr id="<%= category[i]._id %>">
            <td><%= category[i].name %></td>
            <td><%= category[i].description %></td>
            <td><%= new Date(category[i].createdAt).toLocaleString('en-US') %></td>
            <td>
              <button class="btn btn-secondary" style="width: 80px">
                <a href="/admin/edit-category?id=<%= category[i]._id %>" class="text-white" style="text-decoration: none"
                  >Edit</a
                >
              </button>
              <button class="btn btn-danger" style="width: 80px" onclick="confirmDelete('<%= category[i]._id %>')">
                Delete
              </button>
              
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
        <div>
            <button class="btn btn-dark" style="width: 150px; margin-bottom: 20px;">
                <a href="/admin/add-category" class="text-white" style="text-decoration: none"
                  >Add Category</a
                >
              </button>
        </div>
    </div>

    </div>
  </div>
</div>

<%- include('../../views/partials/admin/footer') %>


<script>
    function confirmDelete(categoryId) {
  if (confirm('Are you sure you want to delete this category?')) {
    fetch(`/admin/delete-category/${categoryId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      },
    })
    .then(response => {
      if (response.ok) {
        alert('Category soft deleted successfully!');
        
        // Find and remove the row from the table
        const row = document.getElementById(categoryId); // Get the row by category ID
        row.remove();  // Remove the row from the table
      } else {
        response.json().then(data => {
          alert('Failed to delete the category: ' + data.error);
        });
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('An error occurred while deleting the category.');
    });
  }
}

  </script>
  
