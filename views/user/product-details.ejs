<%- include('../../views/partials/user/header') %>


<div class="container my-5">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= products.productName%></li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Image Section -->
        <div class="col-md-6">
            <div class="product-image">
                <!-- Big Image with Zoom -->
                <div class="main-img-container position-relative">
                    <img src="<%= products.productImage[0] %>" 
                        class="img-fluid main-image" 
                        id="main-image" 
                        alt="<%= products.productName %>">
                    <div class="magnifier-lens"></div>
                </div>


                <!-- Thumbnail Images -->
                <div class="thumbnails mt-3">
                    <div class="row">
                        <% if (products.productImage && products.productImage.length > 0) { %>
                        <% products.productImage.forEach((image, index) => { %>
                            <div class="col-3">
                                <img src="<%= image %>" class="img-fluid thumbnail" alt="Thumbnail" data-target="#main-image" data-image="<%= image %>">
                            </div>
                        <% }) %>
                        <% } else { %>
                            <p>No product images available</p>
                        <% } %>
                    </div>
                </div>
            </div>
            <!-- Leave a Review Button -->
     <button class="btn btn-primary mt-5" id="leave-review-btn">Leave a Review</button>

     <!-- Reviews Section -->
     <h2 class="mt-3">Reviews</h2>
     <div class="reviews">
         <%= reviews.length === 0 ? 'No reviews yet.' : '' %>
         <% reviews.forEach(review => { %>
             <div class="review mb-3">
                 <h5 class="text-secondary" style="text-align: left;"><%= review.user_id.name %> </h5>
                 <span class="small"><%= new Date(review.review_date).toLocaleDateString() %></span>
                 <span class="badge bg-warning"><%= review.rating %> / 5</span>
                 <p class="mt-2"><%= review.review_text %></p>
             </div>
         <% }) %>
     </div>
 
     <!-- Leave a Review Modal -->
     <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
         <div class="modal-dialog">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="reviewModalLabel">Leave a Review</h5>
                     <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                 </div>
                 <div class="modal-body">
                     <form id="reviewForm" action="" method="POST">
                         <div class="mb-3">
                             <label for="rating" class="form-label">Rating</label><br>
                             <select name="rating" required>
                                 <option value="1">1 - Poor</option>
                                 <option value="2">2 - Fair</option>
                                 <option value="3">3 - Good</option>
                                 <option value="4">4 - Very Good</option>
                                 <option value="5">5 - Excellent</option>
                             </select>
                         </div>
 
                         <div class="mb-3">
                             <br><br><label for="review_text" class="form-label">Review Text</label>
                             <textarea name="review_text" class="form-control" rows="4" required></textarea>
                         </div>
 
                         <!-- <div class="mb-3">
                             <label for="images" class="form-label">Images (comma separated URLs)</label>
                             <input type="text" name="images" class="form-control" placeholder="image1.jpg,image2.jpg">
                         </div> -->
 
                         <!-- <div class="mb-3">
                             <label for="verified_purchase" class="form-label">Verified Purchase</label>
                             <input type="checkbox" name="verified_purchase" class="form-check-input" checked>
                         </div> -->
 
                     </form>
                 </div>
                 <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                     <button type="submit" class="btn btn-primary" id="submitReviewBtn">Submit Review</button>
                 </div>
             </div>
         </div>
     </div>

     <!-- Leave a Review Modal -->
<div class="modal fade" id="purchaseAlertModal" tabindex="-1" aria-labelledby="purchaseAlertModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="purchaseAlertModalLabel">Review Submission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Please buy the product first before submitting a review.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

        </div>

        

        <!-- Product Info Section -->
        <div class="col-md-6 product-details">
            <div class="magnified-image"></div>
               
            <h2><%= products.productName %></h2>

            <!-- Display average rating -->
            <div class="product-rating">
                <span class="badge bg-primary"><%= avgRating.toFixed(1) %> / 5.0</span>
            </div>

            <!-- Price -->
            <hr>
            <div class="product-price">
                <!-- Badge for Out of Stock -->
                <% if (products.quantity <= 0) { %>
                    <span class="badge badge-danger">Out of Stock</span><br>
                    <% } %>
                <% if (products.productOffer > 0) { %>
                    <span class="h4 mr-2 text-danger">- <%= products.productOffer %>% </span>
                <% } %>
                <span class="h3 text-dark">&#8377 <%= products.salePrice %></span>
                <% if (products.productOffer > 0) { %>
                    <p class="h6 text-muted mt-2">M.R.P: <s>&#8377 <%= products.regularPrice %></s></p>
                <% } %>
                
            </div>

            <!-- Product Description -->
            <hr>
            <p><%= products.description %></p>

            <!-- Product Policies -->
            <div class="product-policies">
                <p><i class="bi bi-gear"></i> 1 Year Warranty</p>
                <p><i class="bi bi-arrow-clockwise"></i> 30 Days Return Policy</p>
                <p><i class="bi bi-truck"></i> Cash on Delivery</p>
            </div>

            

            <!-- Quantity Control -->
            <div class="quantity-control d-flex align-items-center mb-4">
                <button class="btn btn-light" id="decrease-quantity"><i class="bi bi-dash"></i></button>
                <input type="text" id="quantity" class="form-control mx-2" value="1" readonly style="width: 60px; text-align: center;">
                <button class="btn btn-light" id="increase-quantity"><i class="bi bi-plus"></i></button>
            </div>

            <!-- Add to Cart and Wishlist -->
            <div class="d-flex">
                <button class="btn btn-primary mr-2" id="add-to-cart">Add to Cart</button>
                <button class="btn btn-outline-danger" id="add-to-wishlist"><i class="bi bi-heart"></i> Add to Wishlist</button>
            </div>

             

            <!-- Tags and Availability -->
            <hr>
            <div class="product-tags">
                <p><strong>Category:</strong> <%= products.category.name %></p>
                <p><strong>Availability:</strong> <%= products.quantity %> Items in Stock</p>
            </div>

            <!-- highlights -->
            <hr>
            <div>
                <h4>Product Highlights</h4>
                    <ul class="mt-2">
                    <% if (products.highlights.length > 0) { %>
                        <% products.highlights.forEach(highlight => { %>
                        <li><%= highlight %></li>
                        <% }) %>
                    <% } else { %>
                        <li>No highlights available</li>
                    <% } %>
                    </ul>
            </div>

            <!-- Coupon Section -->
            <div class="coupon-section">
                <h4>Available Coupons:</h4>
                <ul>
                <% coupons.forEach(coupon => { %>
                    <li>
                    <b><%= coupon.name %></b>: 
                    <% if (coupon.expireOn > Date.now()) { %>
                        <span>Valid Until: <%= coupon.expireOn.toLocaleDateString() %></span>
                    <% } else { %>
                        <span>Expired</span>
                    <% } %>
                    </li>
                <% }) %>
                </ul>

                <!-- Coupon Input Field -->
                <!-- <h4>Apply Coupon:</h4>
                <form id="applyCouponForm">
                <input type="text" id="couponCode" name="couponCode" placeholder="Enter Coupon Code" required />
                <button type="submit">Apply Coupon</button> -->
                </form>

                <!-- <div id="couponFeedback"></div>
                <h3>Total Price: $<span id="totalPrice"><%= products.salePrice %></span></h3>
            </div> -->
            </div>

            
        </div>
    </div>
    
     

    <!-- related recommendations -->
    <% if (relatedProducts.length > 0) { %>
        <div class="container">  <!-- Add container to center the content -->
            <div class="row text-center">
                <h3 class="w-100 text-center mb-4 mt-4">Related Products</h3>
                <!-- Bootstrap grid will handle the layout -->
                <% for (let i = 0; i < relatedProducts.length; i++) { %>
                <div class="col-lg-3 col-md-3 col-sm-6 mb-4">
                    <div class="product__item">
                        <div class="product__item__pic set-bg">
                            <a href="/product-details?id=<%= relatedProducts[i]._id %>">
                                <img class="default-img" 
                                     src="<%= relatedProducts[i].productImage[0] %>"  
                                     alt="<%= relatedProducts[i].productName %>">
                            </a>
                            <ul class="product__hover">
                                <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text" style="text-align: left;">
                            <h6><%= relatedProducts[i].productName %></h6>
                            <a href="/addToCart?id=<%= relatedProducts[i]._id %>" class="add-cart">+ Add To Cart</a>
                            <span class="h5">&#8377 <%= relatedProducts[i].salePrice.toLocaleString('en-IN') %></span>
                            <% if (relatedProducts[i].productOffer > 0) { %>
                            <span class="small">(<%= relatedProducts[i].productOffer %>% off)</span><br>
                            <p class="text-muted"><strike>&#8377 <%= relatedProducts[i].regularPrice.toLocaleString('en-IN') %></strike></p>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    <% } %>
    
    
     

    <div class="row text-center">
        <h3 class="w-100 text-center mb-4 mt-5">You May Also Like</h3>
        <div class="d-flex justify-content-between flex-wrap">
            <% for (let i = 0; i < randomProducts.length; i++) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="product__item">
                    <div class="product__item__pic set-bg">
                        <a href="/product-details?id=<%= randomProducts[i]._id %>">
                            <img class="default-img" 
                                 src="<%= randomProducts[i].productImage[0] %>"  
                                 alt="<%= randomProducts[i].productName %>">
                        </a>
                        <ul class="product__hover">
                            <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text" style="text-align: left;">
                        <h6><%= randomProducts[i].productName %></h6>
                        <a href="/addToCart?id=<%= randomProducts[i]._id %>" class="add-cart">+ Add To Cart</a>
                        <span class="h5">&#8377 <%= randomProducts[i].salePrice.toLocaleString('en-IN') %></span>
                        <% if (randomProducts[i].productOffer > 0) { %>
                        <span class="small">(<%= randomProducts[i].productOffer %>% off)</span><br>
                        <p class="text-muted"><strike>&#8377 <%= randomProducts[i].regularPrice.toLocaleString('en-IN') %></strike></p>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
        
    

</div>

<%- include('../../views/partials/user/footer') %>


